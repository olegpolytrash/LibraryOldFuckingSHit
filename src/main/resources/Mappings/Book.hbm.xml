<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- Mapping for the Book class -->
<hibernate-mapping>
    <class name="com.soft.library.DataBase.DBEntities.Book" table="Book">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <set name="authors" table="BookAuthor" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="book_id" not-null="true" />
            </key>
            <many-to-many entity-name="com.soft.library.DataBase.DBEntities.Book">
                <column name="author_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>