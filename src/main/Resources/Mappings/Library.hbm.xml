<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- Mapping for the Author class -->
<hibernate-mapping>
    <class name="com.soft.library.DataBase.DBEntities.Author" table="Author">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="pages" column="pages" type="int"/>
        <property name="year" column="year" type="int"/>
        <property name="quantity" column="quantity" type="int"/>

        <set name="books" table="Book" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="book_id" not-null="true" />
            </key>
            <many-to-many entity-name="com.soft.library.DataBase.DBEntities.Book">
                <column name="id" not-null="true" />
            </many-to-many>
        </set>
        <set name="publishers" table="Publisher" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="publisher_id" not-null="true" />
            </key>
            <many-to-many entity-name="com.soft.library.DataBase.DBEntities.Publisher">
                <column name="id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>