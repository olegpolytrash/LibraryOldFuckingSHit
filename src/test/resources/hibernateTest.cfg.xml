<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<!-- Configuration file for Hibernate -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">
            com.mysql.jdbc.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:mysql://localhost/sql373362
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>

        <!-- uncomment to recreate database every time the tests are run -->
        <property name="hbm2ddl.auto">
            create
        </property>

        <!-- uncomment to see hibernate-generated SQL queries -->
        <property name="show_sql">
            true
        </property>

        <!-- List of XML mapping files -->
        <mapping resource="Mappings/Author.hbm.xml"/>
        <mapping resource="Mappings/Book.hbm.xml"/>
        <mapping resource="Mappings/Publisher.hbm.xml"/>
        <mapping resource="Mappings/Library.hbm.xml"/>
        <mapping resource="Mappings/LibraryLogEntry.hbm.xml"/>
        <mapping resource="Mappings/Reader.hbm.xml"/>

    </session-factory>
</hibernate-configuration>